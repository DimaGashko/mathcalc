extends ../_templates/calcPage/calcPage
 
block title
   title #{pagesConfig.hash.matrixMulNum.name} | #{pagesConfig.name}
  
block contentTitle 
   | #{pagesConfig.hash.matrixMulNum.name}

block fullWidthContent
   - fullWidthContent = false

append workspace

   table.controls
         tr 
            td Operation: 
            td 
               select.selectOperator
                  option(value="*" selected) Addition
                  option(value="/") Subtraction
         tr
            td Number: 
            td
               input.selectNumber(type="number" value="0" min=-1e6+1 max=1e6-1)

   .calc 
      .calc__item.calc__matrixA
      .calc__item.calc__matrixB